@import "css/fonts.styl"

html
    font-size 20px
body
    margin 0
    padding 0
    background #fff
    font-family "Bliss Pro", sans-serif
    font-weight 400
    color #242428
.wrapper
    display flex
    flex-direction column
    align-items center
    overflow-x hidden
ul
li
    margin 0
    padding 0
    list-style none
h2
    margin 0
    font-weight 500
    font-size 32px
    padding 0 0 50px
    color #24c9ac
    text-align center
    width 100%
h3
    margin 0
    font-weight 400
    font-style italic
.btn
    background #24c9ac
    color #fff
    padding 0 15px
    height 40px
    line-height 40px
    border-radius 22px
    display inline-block
    text-decoration none
    font-size 1.044rem
    margin-top 20px
    border 2px solid #fff
    box-shadow 0 5px 10px 0 rgba(28, 33, 32, 0.1)
    cursor pointer
@import "css/header.styl"
@import "css/slider.styl"

.simple-container
    background #fff
    width 100%
    max-width 1100px
    padding 60px calc(50vw - 550px)
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items center
    &.align-start
        align-content flex-start
        align-items flex-start
.simple-text
    width calc(100% - 500px)
    a
        text-decoration none
        color #24c9ac
    img
        height 1.2rem
    .flex
        display flex
        align-items center
        a
            display flex
            align-items center
            color inherit
.w-200
    width 200px
.h-200
    height 200px
.sqr-300
    width 300px
    height 300px
    img
        width 100%
.round
    border-radius 50%
    overflow hidden
.align-right
    text-align right
.slogan-container
    width 100%
    max-width 1100px
    padding 60px calc(50vw - 550px)
    display flex
    flex-wrap wrap
    justify-content space-between
    background url(img/gra1.png) repeat center top / contain;
.slogan-item
    width 45%
    color #fff
.portfolio-container
    width 100vw
    padding 60px 0
    background #fff
    text-align center
.portfolio
    height 330px
.portfolio-item
    width 330px
    height 330px
    margin 0 5px
    display inline-block
    background no-repeat center center / cover
.wedding-container
    width 100%
    background url(img/photo/info.png) no-repeat center 25% / cover
.wedding-container_transparent
    width 100%
    max-width 1100px
    padding 60px calc(50vw - 550px)
    background rgba(211,231,228,.75)
.wedding-inner-container
    background #f6fafa
    display flex
    flex-wrap wrap
    justify-content space-between
    padding 60px 40px 40px
    .simple-text
        width calc(100% - 550px)
.contacts-container
    width 100%
    max-width 1100px
    padding 140px calc(50vw - 550px) 40px
    display flex
    flex-wrap wrap
    justify-content center
    .simple-text
        max-width 400px
        padding 0 0 30px 50px
    p
        width 100%
        max-width 750px
.map-container
    width 100%
    max-width 1100px
    padding 0 calc(50vw - 550px) 60px
    iframe
        box-shadow 0 3px 10px 0 #24c9ac
.price-container
    width 100%
    max-width 1100px
    padding 140px calc(50vw - 550px) 40px
    display flex
    flex-wrap wrap
    justify-content space-between
.price-block
    width 100%
    max-width 190px
    padding 35px
    margin 5px 0
    height 274px
    border 2px solid #24c9ac
    position relative
    //display flex
    //flex-direction column
    //justify-content space-between
    //p
    //    margin 0
    h3
        font-size 1.4rem
        line-height 1
        font-weight 200
        font-style normal
        height 100px
    h4
        display flex
        justify-content space-between
        align-items center
        font-size 35px
        font-weight 200
        margin 0
        img
            height 40px
    sup
        vertical-align top
        color #24c9ac
        font-size .7em
    &:before
        position absolute
        top 0
        right 0
        height 0
        width 0
        content ""
        border 45px solid #24c9ac
        border-left-color transparent
        border-bottom-color transparent
    .pic
        position absolute
        top 0
        right 0
        width 50px
        height 50px
        background no-repeat center center / 80%
    .pic-w
        background-image url(img/price_wedding.svg)
    .pic-e
        background-image url(img/price_evening.svg)
    .pic-s
        background-image url(img/price_school.svg)
    .pic-p
        background-image url(img/price_photo.svg)
.helv
    font-family "Helvetica Neue", "Helvetica", "Verdana", sans-serif
    font-weight 200
    display flex
    align-items center
.green
    color #24c9ac
.small
    padding-left 5px
    display inline-flex
    flex-direction column
    font-size .4em
    line-height 1
    font-weight 400
.price-inner-container
    width 100%
    max-width 821px
    margin auto
    display flex
    flex-wrap wrap
    justify-content space-between
.corporate-block
    margin-top 15px
    width 100%
    padding 50px
    text-align center
    border 2px solid #e31869
    background url(img/cat.svg)  95% 100% / 30px no-repeat
    h3
        font-style normal
        font-size 46px
        font-weight 200
    h4
        font-size 32px
        font-weight 200
        margin 20px
    p
        margin 0
@import "css/footer.styl"
.portfolio-container
    width 100%
    padding 140px 0 40px
    ul.ui-tabs-nav
        display flex
        justify-content center
        background transparent
        border none
        li
            border 2px solid #24c9ac
            background #fff
            color #24c9ac
            padding 0 15px
            height 40px
            line-height 40px
            border-radius 22px
            display inline-block
            text-decoration none
            font-size 1.044rem
            box-shadow 0 5px 10px 0 rgba(28, 33, 32, 0.1)
            cursor pointer
            &:focus
                outline none !important
            a
                padding 0 !important
                font 1rem/40px "Bliss Pro", sans-serif
                &:focus
                    outline none !important
            &.ui-tabs-active
                border 2px solid #fff
                background #24c9ac
                color #fff
                cursor pointer


