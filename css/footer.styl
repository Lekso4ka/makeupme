footer
    width 100vw
.feedback-container
    width 100%
    max-width 1100px
    padding 60px calc(50vw - 550px)
    background url(img/gra2.png);
    h2
        padding-bottom 10px
    p
        text-align center
        margin-top 0
    table
        margin auto
    td:first-child
        padding 17px 10px
        vertical-align top
    input:not([type="submit"]),
    textarea
        width 480px
        border 2px solid #d7d7d7
        margin 5px
        padding 10px
        font 20px "Bliss Pro", sans-serif
        &:focus
            outline none
            border-color #24c9ac
            box-shadow 0 3px 10px 0 #24c9ac
    textarea
        height 100px
.social-container
    width 100%
    max-width 1100px
    padding 40px calc(50vw - 550px)
    background #1c2120
    display flex
    justify-content space-between
    align-items flex-start
    color #a0a9a8
    img
        height 1.2rem
    p
        display flex
        align-items center
.petite
    a
        font-size 15px
        color #bfd6cb
        text-decoration none
        display flex
        align-items flex-end

